import math

x1 = float(input("Введите координату x вершины A: "))
y1 = float(input("Введите координату y вершины A: "))
x2 = float(input("Введите координату x вершины C: "))
y2 = float(input("Введите координату y вершины C: "))

# Вычисляем длину диагонали AC
diagonal = math.sqrt((x2 - x1)*2 + (y2 - y1)*2)

# Вычисляем сторону квадрата
side = diagonal / math.sqrt(2)

# Вычисляем площадь квадрата
area = side**2

# Вычисляем периметр квадрата
perimeter = 4 * side

print("Площадь квадрата:", area)
print("Периметр квадрата:", perimeter) 

